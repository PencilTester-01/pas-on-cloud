{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "License Agreement": {
            "defaultValue": "Decline",
            "allowedValues": [
                "Accept",
                "Decline"
          ],
            "maxLength": 6,
            "type": "String",
            "metadata": {
                "description": "I have read and agreed to the Terms and Conditions."
            }
        },
        "PTA Storage Account Name":{
            "type":"String",
            "metadata":{
               "description":"Enter the name of the storage account that contains the license."
            }
         },
         "Storage Container Name":{
            "type":"String",
            "metadata":{
               "description":"Enter the name of the container in the PTA storage account that contains the license."
            }
         },
         "License File":{
            "defaultValue":"license-valid.xml",
            "type":"String",
            "metadata":{
               "description":"Enter the name of the license file in the container. Note: This field is case sensitive"
            }
         },
         "PTA Server TimeZone":{
            "Type":"String",
            "Description":"Enter the time zone of the PTA Server. https://cyberarkdocu.azurewebsites.net/Product-Doc/OnlineHelp/PAS/Latest/en/Content/PTA/Appendix-B-Time-Zones.htm "
         },
         "Vault Time Zone":{
            "Type":"String",
                "Description":"Enter the time zone of the Vault Server."
         },
         "PVWA Private DNS":{
            "Type":"String",
                "Description":"Enter the private DNS of the PVWA instance."
         },
        "Vault Private IP": {
            "type": "String",
            "metadata": {
                "description": "Enter the IP of the Vault instance and the DR IP (if exists) seperated by a comma (e.g 1.1.1.1,2.2.2.2)."
            }
        },
        "Vault Admin User": {
            "defaultValue": "Administrator",
            "type": "String",
            "metadata": {
                "description": "Enter the Administrator Vault user."
            }
        },
        "Vault Admin Password": {
            "type": "SecureString",
            "metadata": {
                "description": "Enter a password for the Vault Administrator user."
            }
        },
        "PTA VM Host Name": {
            "type": "String",
            "metadata": {
                "description": "Enter the host name for the PTA VM."
            }
        },
        "PTA VM Size": {
            "defaultValue": "Standard_D2s_v3",
            "type": "String",
            "metadata": {
                "description": "Enter the desired VM Size"
            }
        },
        "PTA VM Admin User": {
            "type": "String",
            "metadata": {
                "description": "Enter PTA VM Administrator user."
            }
        },
        "PTA VM Admin Password": {
            "type": "SecureString",
            "metadata": {
                "description": "Enter PTA VM Administrator password."
            }
        },
        "ImageID": {
            "type": "String",
            "metadata": {
                "description": "Enter PTAs Image ID."
            }
        },
        "PTA VNet": {
            "type": "String",
            "metadata": {
                "description": "Enter the VNet name."
            }
        },
        "PTA Subnet": {
            "type": "String",
            "metadata": {
                "description": "Enter the Subnet name."
            }
        },
        "Availability Zone":{
            "type":"string",
            "allowedValues": [
                "1",
                "2",
                "3"
            ],
            "defaultValue": "1",
            "metadata":{
               "description":"Choose the availability zone for the Component VM"
            }
         }
    },
    "variables": {
        "vnetId": "[resourceId('Microsoft.Network/virtualNetworks', parameters('PTA VNet'))]",
        "subnetRefComponent": "[concat(variables('vnetId'), '/subnets/',parameters('PTA Subnet'))]",
        "networkInterfaceName": "[toLower(concat(parameters('PTA VM Host Name'), '-', uniqueString(resourceGroup().id)))]",
        "availabilitySetPlatformFaultDomainCount": 3,
        "availabilitySetPlatformUpdateDomainCount": 5,
        "publicIpAddressName": "[toLower(concat(parameters('PTA VM Host Name'), '-', uniqueString(resourceGroup().id)))]"
    },
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[parameters('PTA VM Host Name')]",
            "apiVersion": "2017-03-30",
            "location": "[resourceGroup().location]",
            "zones": [
                "[parameters('Availability Zone')]"
            ],
            "properties": {
                "osProfile": {
                    "computerName": "[parameters('PTA VM Host Name')]",
                    "adminUsername": "[parameters('PTA VM Admin User')]",
                    "adminPassword": "[parameters('PTA VM Admin Password')]"
                },
                "hardwareProfile": {
                    "vmSize": "[parameters('PTA VM Size')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "id": "[parameters('ImageID')]"
                    },
                    "osDisk": {
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        }
                    }
                },
				"availabilitySet": {
                    "id": "[resourceId('Microsoft.Compute/availabilitySets', parameters('PTA AvailablitySet Name'))]"
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('networkInterfaceName'))]"
                        }
                    ]
                }
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('PTA VM Host Name'),'/', 'customscriptpta')]",
            "apiVersion": "2015-06-15",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "config-pta"
            },
            "properties": {
                "publisher": "Microsoft.Azure.Extensions",
                "type": "CustomScript",
                "typeHandlerVersion": "2.0",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "skipDos2Unix": false
                },
                "protectedSettings": {
                    "commandToExecute": "[concat('python /root/pta_installation/ptaAutomaticConfiguration.py aws' -e vault_ip=parameters('Vault Private IP'), ' ', vault_adminUser=parameters('Vault Admin User'), ' ',  vault_adminPassword=parameters('Vault Admin Password'),' ', pvwa_host=variables('PVWA Private DNS'), ' ', vault_timezone=parameters('Vault Time Zone'), ' ', timezone=parameters('PTA Server TimeZone'), ' ', vault_port=1858)]",
                    "fileUris": []
                }
            },
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', parameters('PTA VM Host Name'))]"
            ]
        },
        {
            "type": "Microsoft.Compute/availabilitySets",
            "name": "[parameters('PTA AvailablitySet Name')]",
            "apiVersion": "2016-04-30-preview",
            "location": "[resourceGroup().location]",
            "properties": {
                "platformFaultDomainCount": "[variables('availabilitySetPlatformFaultDomainCount')]",
                "platformUpdateDomainCount": "[variables('availabilitySetPlatformUpdateDomainCount')]",
                "managed": true
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[variables('networkInterfaceName')]",
            "apiVersion": "2016-09-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRefComponent')]"
                            },
                            "privateIPAllocationMethod": "Dynamic"
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "String",
            "value": "[parameters('PTA VM Admin User')]"
        },
        "networkInterface": {
            "value": "[reference(resourceId('Microsoft.Network/networkInterfaces', variables('networkInterfaceName')),'2016-09-01')]",
            "type": "object"
        }
    }
}